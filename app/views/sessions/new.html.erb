<h1>Sign in</h1>

<p id="notice"><%= notice %></p>

<%= form_tag sessions_path do %>
    <label for="username">Username</label><br>
    <%= text_field_tag :username, params[:username] %>

    <label for="password">Password</label><br>
    <%= password_field_tag :password, params[:password] %>
    <%= submit_tag "Log in" %>
<% end %>