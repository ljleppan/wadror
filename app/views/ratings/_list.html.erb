<table>
  <thead>
  <tr>
    <th>Beer</th>
    <th>Style</th>
    <th>Brewery</th>
    <th>Score</th>
    <th>User</th>
  </tr>
  </thead>

  <tbody>
  <% ratings.each do |rating| %>
      <tr>
        <td>
          <%= link_to rating.beer.name, rating.beer %>
        </td>
        <td>
          <%= link_to rating.beer.style, rating.beer.style%>
        </td>
        <td>
          <%= link_to rating.beer.brewery.name, rating.beer.brewery %>
        </td>
        <td>
          <%= rating.score %>
        </td>
        <td>
          <%= link_to rating.user.username, rating.user %>
        </td>
      </tr>
  <% end %>
  </tbody>

  <tfoot>
  <tr>
    <th>Beer</th>
    <th>Style</th>
    <th>Brewery</th>
    <th>Score</th>
    <th>User</th>
  </tr>
  </tfoot>

</table>