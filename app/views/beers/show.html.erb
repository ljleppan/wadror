<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<p>
<% if @beer.ratings.empty? %>
    Beer has not yet been rated!
<% else %>
    Beer has <%=pluralize(@beer.ratings.count, 'rating')%>, average rating <%= @beer.average_rating %>
<% end %>
</p>

<% if current_user %>
    <%= link_to 'Edit', edit_beer_path(@beer) %> |
    <%= link_to 'Destroy', @beer, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', beers_path %>
