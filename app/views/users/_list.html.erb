<table>
  <thead>
  <tr>
    <th>Username</th>
    <th>Rated beers</th>
    <th>Total ratings</th>
  </tr>
  </thead>

  <tbody>
  <% users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.beers.length %></td>
        <td><%= user.ratings.length %></td>
      </tr>
  <% end %>
  </tbody>

  <tfoot>
  <tr>
    <th>Username</th>
    <th>Rated beers</th>
    <th>Total ratings</th>
  </tr>
  </tfoot>
</table>